prometheus.exporter.unix "node_metrics" {}

prometheus.exporter.cadvisor "docker_metrics" {
  docker_host = "unix:///var/run/docker.sock"
}

prometheus.scrape "app01_scraper" {
  targets = concat(
    prometheus.exporter.unix.node_metrics.targets,
    prometheus.exporter.cadvisor.docker_metrics.targets,
  )
  forward_to = [prometheus.remote_write.to_prom01.receiver]
}

prometheus.remote_write "to_prom01" {
  endpoint {
    url = "http://{{ prom_ip }}:{{ prom_port }}/api/v1/write"
  }
}

local.file_match "system_logs" {
  path_targets = [
    {__path__ = "/var/log/syslog", job = "syslog"},
    {__path__ = "/var/log/auth.log", job = "auth"},
    {__path__ = "/var/log/nginx/*.log", job = "nginx"},
  ]
}

loki.source.file "system_collector" {
  targets    = local.file_match.system_logs.targets
  forward_to = [loki.write.to_loki.receiver]
}

discovery.docker "containers" {
  host = "unix:///var/run/docker.sock"
}

discovery.relabel "docker" {
  targets = discovery.docker.containers.targets

  rule {
    source_labels = ["__meta_docker_container_name"]
    regex         = "/?(.*)"
    target_label  = "service_name"
  }

  rule {
    target_label = "job"
    replacement  = "docker"
  }
}

loki.source.docker "docker" {
  host       = "unix:///var/run/docker.sock"
  targets    = discovery.relabel.docker.output
  forward_to = [loki.write.to_loki.receiver]
}

loki.write "to_loki" {
  endpoint {
    url = "http://{{ mon_ip }}:{{ loki_port }}/loki/api/v1/push"
  }
}

otelcol.receiver.otlp "default" {
  grpc { endpoint = "0.0.0.0:4317" }
  http { endpoint = "0.0.0.0:4318" }

  output {
    traces  = [otelcol.exporter.otlp.to_tempo.input]
  }
}

otelcol.exporter.otlp "to_tempo" {
  client {
    endpoint = "{{ mon_ip }}:4317"
    tls {
      insecure = true
    }
  }
}
